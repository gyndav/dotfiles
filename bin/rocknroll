#!/usr/bin/env sh

if ! type 'brew' > /dev/null; then
  echo '--> Installing Homebrew'
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# echo '--> Upgrade installed formulas'
# brew upgrade

echo '--> BREW ALL THE THINGS!'
brew install curl --force
brew install openssl
brew install make
brew install gnu-tar
brew install gnu-which
brew install git
brew install bash
brew install zsh
brew install ripgrep
brew install coreutils
brew install wget
brew install midnight-commander
brew install mtr
brew install htop
brew install md5sha1sum
brew install pv
brew install rsync
brew install ssh-copy-id
brew install shellcheck
brew install ghostscript
brew install tree
brew install nano
brew install jq
brew install yq
brew install ctop
brew install tig
brew install tmate
brew install shfmt
brew install editorconfig
brew install iperf
brew install bat
brew install prettyping
brew install fd
brew install ncdu
brew install fzf
brew install asdf

echo '--> CASK ALL THE THINGS!'
brew install --cask font-ubuntu
brew install --cask font-hack
brew install --cask font-fira-code
brew install --cask appcleaner
brew install --cask xquartz
brew install --cask vlc
brew install --cask firefox
brew install --cask dropbox
brew install --cask imagealpha
brew install --cask sublime-text-dev
brew install --cask visual-studio-code
brew install --cask iterm2
brew install --cask authy
brew install --cask telegram
brew install --cask signal
brew install --cask rocket
brew install --cask surfshark

echo '--> LETS CODE!'

# local files
if [ ! -f ~/.localrc ]; then
  touch ~/.localrc

  echo "Configure a profile \`DOTPROFILE\` in \`~/.zshrc_local\`:"
  read -r DOTPROFILE

  echo "export DOTPROFILE=$DOTPROFILE" > ~/.localrc
  source ~/.localrc
fi

if [ ! -f ~/.gitconfig_local ]; then
  echo "[github]\n  user = USERNAME\n[user]\n  name = FIRSTNAME LASTNAME\n  email = EMAIL" > ~/.gitconfig_local
  read "Configure now your git informations in \`~/.gitconfig_local\` and press [Enter] when done..."
fi

if [ -f $HOME/.dotfiles/profiles/$DOTPROFILE/rocknroll ]; then
  source $HOME/.dotfiles/profiles/$DOTPROFILE/rocknroll
fi

echo '--> Cleanup Homebrew formulas'
brew cleanup -s

echo '--> Refreshing terminal'
exec $SHELL --login
