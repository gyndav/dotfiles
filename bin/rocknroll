#!/usr/bin/env sh

if ! type 'brew' > /dev/null; then
  echo '--> Installing Homebrew'
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

# echo '--> Upgrade installed formulas'
# brew upgrade

echo '--> BREW ALL THE THINGS!'
brew install curl --force
brew install openssl
brew install make
brew install gnu-tar
brew install gnu-which
brew install git
brew install svn
brew install bash
brew install zsh
brew install ripgrep
brew install coreutils
brew install wget
brew install midnight-commander
brew install mtr
brew install htop
brew install md5sha1sum
brew install pv
brew install rsync
brew install ssh-copy-id
brew install shellcheck
brew install ghostscript
brew install tree
brew install nano
brew install jq
brew install yq
brew install ctop
brew install tig
brew install tmate
brew install shfmt
brew install editorconfig
brew install iperf
brew install bat
brew install prettyping
brew install fd
brew install ncdu
brew install fzf
brew install asdf

echo '--> CASK ALL THE THINGS!'
brew tap homebrew/cask-fonts

brew install font-ubuntu
brew install font-hack
brew install font-fira-code

brew install appcleaner
brew install xquartz
brew install vlc
brew install firefox

brew install imagealpha
brew install sublime-text
brew install visual-studio-code
brew install iterm2
brew install authy
brew install telegram
brew install signal
brew install rocket
brew install surfshark

echo '--> LETS CODE!'

# local files
if [ ! -f ~/.localrc ]; then
  touch ~/.localrc

  echo "Configure a profile \`DOTPROFILE\` in \`~/.zshrc_local\`:"
  read -r DOTPROFILE

  echo "export DOTPROFILE=$DOTPROFILE" > ~/.localrc
  source ~/.localrc
fi

if [ ! -f ~/.gitconfig_local ]; then
  echo "[github]\n  user = USERNAME\n[user]\n  name = FIRSTNAME LASTNAME\n  email = EMAIL" > ~/.gitconfig_local
  read "Configure now your git informations in \`~/.gitconfig_local\` and press [Enter] when done..."
fi

if [ -f $HOME/.dotfiles/profiles/$DOTPROFILE/rocknroll ]; then
  source $HOME/.dotfiles/profiles/$DOTPROFILE/rocknroll
fi

echo '--> Cleanup Homebrew formulas'
brew cleanup -s

echo '--> Refreshing terminal'
exec $SHELL --login
